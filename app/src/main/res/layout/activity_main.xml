<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="#252525"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#1A1A1A"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tab_hierarchy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1A1A1A"
                android:text="Hierarchy"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_tab_project"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#252525"
                android:text="Project"
                android:textAllCaps="false"
                android:textColor="#888888"
                android:textSize="10sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/list_hierarchy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/project_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:background="#1A1A1A"
                android:hint="ðŸ” Search..."
                android:textColorHint="#555555"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionDone|flagNoExtractUi" />

            <ListView
                android:id="@+id/list_project"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#1A1A1A"
                android:dividerHeight="1dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/left_resizer"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="#1A1A1A" />

    <com.zayk.engine.ZaykSurfaceView
        android:id="@+id/zayk_surface_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <View
        android:id="@+id/right_resizer"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="#1A1A1A" />

    <LinearLayout
        android:id="@+id/right_panel"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="#252525"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#1A1A1A"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Inspector"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>